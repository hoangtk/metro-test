<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_generate_pr_wizard" model="ir.ui.view">
            <field name="name">view_generate_pr_wizard</field>
            <field name="model">generate.pr.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate PR Wizard" version="7.0">
                    <separator string="Please fill the delivery date and warehouse"/>
                    <group>
                        <field name="warehouse_id" class="oe_inline"/>
                        <field name="delivery_date" class="oe_inline"/>
                    </group>
                    <footer>
                        <button name="do_generate" string="Generate PR" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>