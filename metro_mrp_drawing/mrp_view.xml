                                <field name="Ps_prepare_qty" class="metro_high_light" attrs="{'invisible':[('Ps_prepare_qty', '==', 0)],'readonly': True}"/>
                                <field name="Ps_done_qty" class="metro_high_light" attrs="{'invisible':[('Ps_need_qty', '==', 0)],'readonly': True}"/>
